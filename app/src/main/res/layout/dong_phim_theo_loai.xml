<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#f7f1e3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_marginBottom="20px"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/alita"
                android:id="@+id/imageviewhinhphim"
                android:layout_width="100dp"
                android:layout_height="150dp" />
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textviewtenphim"
                    android:text="ALITA: NỮ THẦN CHIẾN BINH"
                    android:textStyle="bold"
                    android:textColor="#2d3436"
                    android:textSize="17dp"
                    android:layout_marginLeft="40px"
                    android:layout_marginBottom="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="#2d3436"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thời lượng: "
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="#2d3436"
                        android:id="@+id/textviewthoiluong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="130 phút"
                        android:textSize="15sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/textviewmota"
                    android:layout_margin="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tác phẩm live-action chuyển thể từ manga cùng tên của Yukito Kishiro..."
                    />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>